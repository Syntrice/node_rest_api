{
  "compilerOptions": {
    "moduleDetection": "force",
    "module": "Preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noImplicitAny" : true,
    "sourceMap" : true,
    "baseUrl" : "src",
    "outDir" : "dist",
  },
  "include" : ["src/**/*"]
}
